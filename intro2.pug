extends layout_kor.pug 
block variables 
  -var menuType = "intro"

block div
  .image-button-wrap
    a.image-button#lacals(href="main.html")
      img(src="images/cardButton1.jpeg", alt="LaCalS")
      .overlay
      span.button-text
        | LaCalS 
        i.fas.fa-arrow-right.arrow
    
    a.image-button#signatures(href="main.html")
      img(src="images/cardButton2.jpeg", alt="Signatures")
      .overlay
      span.button-text
        | Signatures 
        i.fas.fa-arrow-right.arrow
    
    a.image-button#contact(href="main.html")
      img(src="images/cardButton3.jpeg", alt="Contact Us")
      .overlay
      span.button-text
        | Contact Us 
        i.fas.fa-arrow-right.arrow
  //- 처음에 초록색 이였다가 제색깔로 보이게
  style.
    .image-button-wrap {
        display: flex;
        height: 100vh;
        width: 100%;
    }

    .image-button {
        flex: 1;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        width: 33.333%;
    }

    .image-button img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(67, 86, 74, 0.9);
        transition: opacity 0.3s ease;
    }

    .button-text {
        position: absolute;
        color: white;
        font-size: 40px;
        font-weight: bold;
        z-index: 3;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
    }

    .arrow {
        margin-left: 10px;
        transition: transform 0.3s ease;
    }

    .image-button:hover img {
        transform: scale(1.1);
    }

    .image-button:hover .overlay {
        opacity: 0;
    }

    .image-button:hover .button-text {
        transform: translateY(-10px);
    }

    .image-button:hover .arrow {
        transform: translateX(5px);
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column;
        }

        .image-button {
            width: 100%;
            height: 33.333vh;
        }
    }

  script. 
    document.querySelectorAll('.image-button').forEach(button => {
      button.addEventListener('mouseover', () => {
          button.querySelector('.button-text').style.opacity = '1';
      });

      button.addEventListener('mouseout', () => {
          button.querySelector('.button-text').style.opacity = '0.8';
      });
    });