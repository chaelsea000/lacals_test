extends layout_kor.pug 
block variables 
  -var menuType = "intro"

block div
  div#fullpage
    div#cardButtonWrap.cardButtonWrap.page
      a(href="main.html")
        div.card-overlay
        img(src="images/cardButton1.jpeg")
        div.card-details 
          h3 LaCalS
            i.fas.fa-arrow-right.arrow
      a(href="main.html")
        div.card-overlay
        img(src="images/cardButton2.jpeg")
        div.card-details 
          h3 Signatures
            i.fas.fa-arrow-right.arrow
      a(href="main.html")
        div.card-overlay
        img(src="images/cardButton3.jpeg")
        div.card-details 
          h3 Contact Us
            i.fas.fa-arrow-right.arrow
  //- 처음에 초록색 이였다가 제색깔로 보이게
  style.
    .page {height:100vh;}
    .introWrap {display:flex; justify-content: center; align-items: center; background-color: #43564A; cursor: pointer;}
    .introTitle {font-size: 22vw; color: white;}
    .cardButtonWrap h3 {font-size: 40px;}
    .cardButtonWrap {display:flex; justify-content: space-around; align-items: center;}
    .cardButtonWrap img {background-color: rgba(16,46,72,0.6); background-blend-mode: multiply;}
    .cardButtonWrap > a {position:relative; height:100vh;}
    .cardButtonWrap > a .card-overlay {
      background: rgba(26,34,29,0.8);
      position: absolute;
      height: 99%;
      width: 100%;
      left: 0;
      top: 0;
      bottom: 0;
      right: 0;
      opacity: 0;
      -webkit-transition: all 0.4s ease-in-out 0s;
      -moz-transition: all 0.4s ease-in-out 0s;
      transition: all 0.4s ease-in-out 0s;
    }

    .cardButtonWrap > a:hover .card-overlay{opacity: 1;}

    .cardButtonWrap > a img {width:100%; height:100%; object-fit:cover;}

    .cardButtonWrap > a .card-details{position:absolute; text-align: center; width: 100%; top: 50%;}
    .cardButtonWrap > a .card-details h3{color:#fff; font-weight: 500; display:inline-block; position: relative; transition: all 300ms ease-out; will-change: transform;}
    .cardButtonWrap > a .card-details h3 i {margin-left: 8px;}
    .cardButtonWrap > a:hover h3 {
      -webkit-transform: translate3d(-1rem, 0, 0);
              transform: translate3d(-1rem, 0, 0);
    }
    .cardButtonWrap > a .card-details h3 i {
      position: absolute;
      width: 10px;
      right: -20px;
      opacity: 1;
      top: 50%;
      -webkit-transform: translateY(-50%);
              transform: translateY(-50%);
      transition: all 300ms ease-out;
      will-change: right, opacity;
    }

    .cardButtonWrap > a:hover .card-details h3 i{
      opacity: 1;
      right: -3rem;
    }