                    li 
                        img(src="https://img.youtube.com/vi/4GQ3quyeFc8/maxresdefault.jpg")
                    li 
                        img(src="https://img.youtube.com/vi/MgjthjKS1j0/maxresdefault.jpg")
                    li 
                        img(src="https://img.youtube.com/vi/hQj9A9gkN2M/maxresdefault.jpg")
                    li 
                        img(src="https://img.youtube.com/vi/JrRZwHmEh9o/maxresdefault.jpg")
                    li 
                        img(src="https://img.youtube.com/vi/RGv-l0tMMx8/maxresdefault.jpg")
    style.
        #content.container-fluid {margin-top: 4rem;}
        .profile {display: flex; gap: 10rem; justify-content: space-between; margin-bottom:15rem;}
        .profileImage {width: 20%; min-width: 34rem; max-width: 38rem;}
        .profileImage img {width: 100%; border-radius: 2rem;}
        .profileText {width: 80%;}
        .profileIntro {font-size: 3.8rem; font-family: 'RixXladywatermelonR'; margin-bottom: 7rem;}
        .profileName {font-size: 2.8rem; margin-bottom: 1.8rem; color: #1d1d1f;}
        .profileName b {margin-right: 1rem;}
        .profileTags {margin-bottom: 6rem;}
        .profileTags > span {padding: 0.5rem 1rem; font-size: 1.4rem; border-radius: 2rem; margin-right: 0.8rem; box-sizing: border-box; background-color: #1d1d1f; color:#fff;}

        .profileContent {}
        .profileContentTitle {font-size:2.4rem; font-weight: 600; color: #333; margin-bottom: 1rem;}
        .profileContentList {font-size: 2.2rem; margin-bottom: 2.4rem;}
        .profileContentList > li {padding-left: 2rem;}
        .profileContentList > li > ul > li {padding-left: 2rem; font-size: 1.8rem; color: #333;}

        .profileTheme1 .profileIntro {font-size: 4.2rem; margin-top: 4rem; font-family: 'SDMisaeng'; font-style: italic;}
        .profileTheme2 .profileIntro {font-size: 2.6rem;}

        /*불렛 효과*/
        .profileContentTitle {position: relative; padding-left: 0rem;}
        .profileContentTitle:after {position: absolute; content:''; width: 1.2rem; height: 1.2rem; border-radius: 50%; background-color:#f15c22; left: -2.3rem; top: 0.7rem;}
        .profileTheme1 .profileContentList > li {position: relative;}
        .profileTheme1 .profileContentList > li:after {content: '\2713'; position: absolute; color:#f15c22; opacity: 0.5; left: -0.2rem; top: 0.1rem; font-size: 1.8rem;}
        
